generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id          String     @id @default(uuid())
  name        String
  clientName  String
  status      String     @default("active") // 'active' | 'completed' | 'archived'
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  documents   Document[]
  questions   Question[]
  chatSessions ChatSession[]
}

model Document {
  id         String   @id @default(uuid())
  project    Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId  String
  name       String
  path       String
  status     String   // 'uploaded' | 'indexing' | 'indexed' | 'failed'
  content    String?  @db.Text
  uploadedAt DateTime @default(now())
}

model Question {
  id        String   @id @default(uuid())
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId String
  text      String
  section   String
  answer    Answer?
}

model Answer {
  id           String     @id
  question     Question   @relation(fields: [questionId], references: [id], onDelete: Cascade)
  questionId   String     @unique
  text         String     @db.Text
  manualText   String?    @db.Text
  confidence   String     // 'high' | 'medium' | 'low'
  status       String     // 'unanswered' | 'processing' | 'completed' | 'review_required' | 'CONFIRMED', etc.
  evalScore    Float?
  evalExplanation String?    @db.Text
  generatedAt  DateTime   @default(now())
  citations    Citation[]
}

model Citation {
  id             String       @id @default(uuid())
  answer         Answer?      @relation(fields: [answerId], references: [id], onDelete: Cascade)
  answerId       String?
  chatMessage    ChatMessage? @relation(fields: [chatMessageId], references: [id], onDelete: Cascade)
  chatMessageId  String?
  documentId     String
  documentName   String
  pageNumber     Int?
  textSnippet    String       @db.Text
  relevanceScore Float
}

model ChatSession {
  id          String        @id @default(uuid())
  project     Project       @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId   String
  title       String        @default("New Chat")
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  messages    ChatMessage[]
}

model ChatMessage {
  id          String       @id @default(uuid())
  session     ChatSession  @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  sessionId   String
  role        String       // 'user' | 'assistant'
  content     String       @db.Text
  confidence  String?      // 'high' | 'medium' | 'low' (for assistant messages)
  createdAt   DateTime     @default(now())
  citations   Citation[]
}
